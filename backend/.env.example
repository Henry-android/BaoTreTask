# Backend server
PORT=4000

# Auth
JWT_SECRET=change_me_in_dev

# Mongo
MONGODB_URI=mongodb://localhost:27017/project_guardian

# Gemini (optional, only needed for /api/tasks/:id/analyze and /api/overdue/scan)
# Supported env names: GEMINI_API_KEY (preferred) or API_KEY or GOOGLE_API_KEY
GEMINI_API_KEY=

# Optional seed admin account (recommended for demo)
# In non-production, if ADMIN_EMAIL/ADMIN_PASSWORD are not provided,
# backend will seed a default admin:
#   email: admin@example.com
#   password: admin12345
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin12345
